                    htmlXII += '<td>'+xii[l].h+'</td>';
                    htmlXII += '<td>'+xii[l].s+'</td>';
                    htmlXII += '<td>'+xii[l].i+'</td>';
                    htmlXII += '<td>'+xii[l].a+'</td>';
