<script>
    const months = [
        "None",
        "Januari", 
        "Februari", 
        "Maret", 
        "April", 
        "Mei", 
        "Juni", 
        "Juli", 
        "Agustus", 
        "September", 
        "Oktober", 
        "November", 
        "Desember"
    ];

    const days = [
        "Minggu",
        "Senin",
        "Selasa",
        "Rabu",
        "Kamis",
        "Jumat",
        "Sabtu"
    ]
    
    setInterval(function(){
        getData();
    }, 10000);

    getData();

    function getData(){
        n = new Date();
        d = "<h5>"+days[parseInt(n.getDay())] + ", " + n.getDate() + " " + months[parseInt(n.getMonth()+1)] +" " +n.getFullYear()+"</h5>";
        d += '<h1 style="font-size:xxx-large;">'+("0" + n.getHours()).slice(-2) +" : "+ ("0" +n.getMinutes()).slice(-2)+'</h1>';
        $('#clock-date').html(d);

        htmlToday = "";
        tmpH = 0;
        tmpI = 0;
        tmpS = 0;
        tmpA = 0;
        var time;
        var temp_1;
        var temp_2;
        var temp_3;
        var temp_4;
        $.ajax({
            method: 'get',
            url: '/get_dashboard',
            success: function(res){
                tmpH = res['x'][res['x'].length-1][0];
                tmpI = res['x'][res['x'].length-1][1];
                tmpS = res['x'][res['x'].length-1][2];
                tmpA = res['x'][res['x'].length-1][3];

                time = res['y'];
                temp_1 = [];
                temp_2 = [];
                temp_3 = [];
                temp_4 = [];

                for(i=0; i<res['x'].length; i++){
                    temp_1.push(res['x'][i][0]);
                    temp_2.push(res['x'][i][1]);
                    temp_3.push(res['x'][i][2]);
                    temp_4.push(res['x'][i][3]);
                }
            },
            async: false
        });

        htmlToday += '<table class="table table-striped table-lg bg-primary text-light"><tbody><tr><th>Hadir</th>';
        htmlToday += '<th>'+tmpH+'</th></tr><tr>';
        htmlToday += '<th>Sakit</th><th>'+tmpS+'</th></tr><tr>';
        htmlToday += '<th>Izin</th><th>'+tmpI+'</th></tr><tr><th>Absen</th><th>'+tmpA+'</th></tr></tbody></table>';

        $('#tableToday').html(htmlToday);

        var ctx_hadir = document.getElementById("canvas-hadir");

        var myChart_hadir = new Chart(ctx_hadir, {
            type: 'line',
            data: {
                labels: time,
                datasets: [
                { 
                    data: temp_1,
                    label: "Hadir",
                    borderColor: "#0275d8",
                    fill: false
                },
                ]
            },
            options: {
                responsive: true,
                scales: {
                    xAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Tanggal'
                        }
                    }],
                    yAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Siswa'
                        }
                    }]
                }
            }
        });

        var ctx_sakit = document.getElementById("canvas-sakit");

        var myChart_sakit = new Chart(ctx_sakit, {
            type: 'line',
            data: {
                labels: time,
                datasets: [
                { 
                    data: temp_2,
                    label: "Sakit",
                    borderColor: "#5cb85c",
                    fill: false
                },
                ]
            },
            options: {
                responsive: true,
                scales: {
                    xAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Tanggal'
                        }
                    }],
                    yAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Siswa'
                        }
                    }]
                }
            }
        });

        var ctx_izin = document.getElementById("canvas-izin");

        var myChart_izin = new Chart(ctx_izin, {
            type: 'line',
            data: {
                labels: time,
                datasets: [
                { 
                    data: temp_3,
                    label: "Izin",
                    borderColor: "#5bc0de",
                    fill: false
                },
                ]
            },
            options: {
                responsive: true,
                scales: {
                    xAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Tanggal'
                        }
                    }],
                    yAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Siswa'
                        }
                    }]
                }
            }
        });

        var ctx_absen = document.getElementById("canvas-absen");

        var myChart_absen = new Chart(ctx_absen, {
            type: 'line',
            data: {
                labels: time,
                datasets: [
                { 
                    data: temp_4,
                    label: "Absen",
                    borderColor: "#d9534f",
                    fill: false
                },
                ]
            },
            options: {
                responsive: true,
                scales: {
                    xAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Tanggal'
                        }
                    }],
                    yAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Siswa'
                        }
                    }]
                }
            }
        });

        htmlX = "";
        htmlXI = "";
        htmlXII = "";

        $.ajax({
            method: 'get',
            url: '/get_preview_table',
            success: function(res){
                x = res[0];
                xi = res[1];
                xii = res[2];
                htmlX += '<table class="table table-striped table-sm bg-info text-light">';
                htmlX += '<thead><tr style="background-color: #006c7c"><th>Kelas X</th><th>H</th><th>S</th><th>I</th><th>A</th></tr></thead>';
                htmlX += '<tbody>';
                for(l=0; l<x.length; l++){
                    htmlX += '<tr>';
                    htmlX += '<td>'+x[l].kelas+'</td>';
                    htmlX += '<td>'+x[l].h+'</td>';
                    htmlX += '<td>'+x[l].s+'</td>';
                    htmlX += '<td>'+x[l].i+'</td>';
                    htmlX += '<td>'+x[l].a+'</td>';
                    htmlX += '</tr>';
                }
                htmlX +='</tbody></table>';

                htmlXI += '<table class="table table-striped table-sm bg-secondary text-light">';
                htmlXI += '<thead><tr style="background-color: #454b52"><th>Kelas XI</th><th>H</th><th>S</th><th>I</th><th>A</th></tr></thead>';
                htmlXI += '<tbody>';
                for(l=0; l<xi.length; l++){
                    htmlXI += '<tr>';
                    htmlXI += '<td>'+xi[l].kelas+'</td>';
                    htmlXI += '<td>'+xi[l].h+'</td>';
                    htmlXI += '<td>'+xi[l].s+'</td>';
                    htmlXI += '<td>'+xi[l].i+'</td>';
                    htmlXI += '<td>'+xi[l].a+'</td>';
                    htmlXI += '</tr>';
                }
                htmlXI +='</tbody></table>';

                htmlXII += '<table class="table table-striped table-sm bg-success text-light">';
                htmlXII += '<thead><tr style="background-color: #00742e"><th>Kelas XII</th><th>H</th><th>S</th><th>I</th><th>A</th></tr></thead>';
